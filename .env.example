# Example environment file for Fishy Friend Aquatics
# Copy this to `.env` and fill in the real values. Do NOT commit real secrets.

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Email (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Allowed hosts (comma separated)
ALLOWED_HOSTS=127.0.0.1,localhost

# Invoice attachment toggle
INVOICE_ATTACHMENTS=False

# Razorpay (use test keys for development)
# Obtain keys from Razorpay dashboard (do not commit these)
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=rzp_test_secret_xxx

# Optional webhook secret for Razorpay webhooks
#RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Which payment provider to use locally: 'razorpay' or 'mock'
PAYMENT_PROVIDER=mock
