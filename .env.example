# Copy this file to .env and fill in YOUR credentials. Do NOT commit secrets.

# Django runtime settings
# DEBUG should be False in production
DEBUG=True
SECRET_KEY=your-django-secret-key-here
ALLOWED_HOSTS=127.0.0.1,localhost

# Email / SMTP settings
# To send real emails set EMAIL_BACKEND to smtp backend and provide credentials.
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_app_password_here
DEFAULT_FROM_EMAIL=your_email@example.com
EMAIL_TIMEOUT=10

# For local development you can use the console backend instead (prints emails):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Optional: override database URL
# DATABASE_URL=sqlite:///db.sqlite3

# Other environment variables (API keys, etc.) go here
# EXAMPLE_API_KEY=changeme
